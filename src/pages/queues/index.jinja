{% extends "layout.jinja" %}

{% block page_body %}
<h4 class="mg-b-20">{{queue.name}} Queue</h4>  

<div class="row">
  <div class="col-lg-3 mg-t-40 mg-lg-t-0">
    <div class="d-flex align-items-center justify-content-between mg-b-20">
      <h6 class="tx-uppercase tx-semibold mg-b-0">Queue Information</h6>
    </div>
    <nav class="nav nav-classic tx-13">
      <a href="" class="nav-link"><span>Workers</span> <span class="badge badge-primary">{{queue.total_workers}}</span></a>
      <a href="" class="nav-link"><span>Status</span> <span class="badge badge-primary">{{queue.status}}</span></a>
      <a href="" class="nav-link"><span>Processing Jobs</span> <span class="badge badge-primary">{{queue.jobs}}</span></a>
      <a href="" class="nav-link"><span>Enqueue Jobs</span> <span class="badge badge-primary">{{queue.size}}</span></a>
    </nav>
  </div>
  <div class="col col-9">
    <div class="row row-xs">
      <div class="col-lg">
        {{ jobs_spark }}
      </div>
      <div class="col-lg">
        {{ errors_spark }}
      </div>
      <div class="col-lg">
        {{ latency_spark }}
      </div>
    </div>
    <div class="row row-xs">
      <div class="col-lg">
        <div class="mg-t-20">
        {% include 'queues/partials/queue_table.jinja.html' %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

