{% extends "layout.jinja" %}

{% block page_body %}
<h4 class="mg-b-20">Scheduler</h4>
<div class="row">
  <div class="col">
      <div class="card">
        <div class="card-header d-sm-flex align-items-start justify-content-between">
          <h6 class="lh-5 mg-b-0">Recurring Jobs</h6>
        </div><!-- card-header -->
        <div class="card-body pd-y-15 pd-x-10">
          <div class="table-responsive">
            <table class="table table-borderless table-sm tx-13 tx-nowrap mg-b-0">
              <thead>
                <tr class="tx-10 tx-spacing-1 tx-color-03 tx-uppercase">
                  <th class="text-right">Job</th>
                  <th class="text-right">Queue</th>
                  <th class="text-right">Interval</th>
                  <th class="text-right">Job Expires</th>
                  <th class="text-right">Job Retries</th>
                  <th class="text-right">Next Run</th>
                  <th class="text-right">Last Run</th>
                </tr>
              </thead>
              <tbody>
                {%- for s in jobs%}
                <tr>
                  <td class="tx-medium">{{s["class_name"]}}</td>
                  <td class="text-right">{{s["queue"]}}</td>
                  <td class="text-right">{{s["interval"]}}</td>
                  <td class="text-right">{{s["expires"]}}</td>
                  <td class="text-right">{{s["retries"]}}</td>
                  <td class="text-right">{{s["next_run"]}}</td>
                  <td class="text-right">{{s["last_run"]}}</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div><!-- table-responsive -->
        </div><!-- card-body -->
      </div><!-- card -->
  </div>
</div>
{% endblock %}

